{
  "epuservices":{
    "epu-provisioner-service": [
      {
        "name": "epu-provisioner", 
        "args": { }, 
        "config": {
          "server": {
            "amqp": {
              "host": "${rabbitmq_host}",
              "username": "${rabbitmq_username}",
              "password": "${rabbitmq_password}"
            }
          },
          "logging":{
            "handlers":{
              "syslog":{
                "address": ["${syslog_host}", 514]
              }
            },
            "root":{
              "handlers": ["console", "file", "syslog"]
            }
          },
          "context": {
            "uri":"https://svc.uc.futuregrid.org:8446/ContextBroker/ctx/",
            "key":"${ctxbroker_key}",
            "secret":"${ctxbroker_secret}"
          },
          "ssl_no_host_check": "True",
          "contextualization_disabled": "True"
        }
      }
    ]
  },
  "virtualenv": {
    "python" : "/usr/bin/python2.7",
    "virtualenv" : "/usr/bin/virtualenv2.7",
    "path" : "/home/${epu_username}/app-venv"
  },
  "apprun":{
    "run_method":"supervised",
    "autorestart":true
  },
  "appname":"${name}",
  "appdir": "/home/${epu_username}/${name}",
  "process_name": "epu-provisioner-service",
  "username":"${epu_username}",
  "groupname":"${epu_groupname}",
  "recipes":["r2app"]
}
