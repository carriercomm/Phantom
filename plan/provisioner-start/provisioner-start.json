{
  "epu": {
    "username": "${epu_username}",
    "groupname": "${epu_groupname}",
    "virtualenv": {
      "path": "/home/${epu_username}/app-venv",
      "python": "${python}",
      "virtualenv": "${virtualenv}"
    },
    "action": [
      "run"
    ],
    "run_config": {
      "program": "epu-provisioner-service",
      "run_directory": "/home/${epu_username}/${name}",
      "run_method": "supervised",
      "autorestart": true,
      "config": {
        "server": {
          "amqp": {
            "host": "${rabbitmq_host}",
            "username": "${rabbitmq_username}",
            "password": "${rabbitmq_password}"
          }
        },
        "logging": {
          "formatters": {
            "default": {
              "format": "%(asctime)s %(levelname)-8s %(name)-15s %(domain_info)s %(message)s",
              "datefmt": "%Y-%m-%d %H:%M:%S"
            }
          },
          "filters": {
            "domain": {
              "()": "epu.domain_log.DomainLogFilter"
            }
          },
          "handlers": {
            "file": {
              "formatter": "default",
              "level": "DEBUG",
              "filters": [
                "domain"
              ]
            },
            "syslog": {
              "address": [
                "${syslog_host}",
                514
              ]
            },
            "exceptional": {
                "class": "exceptional.ExceptionalLogHandler",
                "api_key": "${exceptional_api_key}",
                "environment": false,
                "append_log_messages": true,
                "level": "ERROR"
            }
          },
          "root": {
            "handlers": [
              "console",
              "file",
              "syslog",
              "exceptional"
            ]
          }
        },
        "context": {
          "uri": "https://svc.uc.futuregrid.org:8446/ContextBroker/ctx/",
          "key": "${ctxbroker_key}",
          "secret": "${ctxbroker_secret}"
        },
        "ssl_no_host_check": "True",
        "contextualization_disabled": "True",
        "statsd": {
          "host": "localhost",
          "port": 8125
        }
      }
    }
  },
  "recipes": [
    "epu"
  ]
}
