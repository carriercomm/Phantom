{
  "virtualenv": {
    "path" : "/home/${epu_username}/app-venv"
  },
  "appretrieve":{
    "retrieve_method":"git",
    "archive_url":"https://github.com/nimbusproject/Phantom/tarball/master",
    "git_repo":"git://github.com/nimbusproject/Phantom.git",
    "git_branch":"master",
    "git_commit":"HEAD"
  },
  "appinstall":{
    "install_method":"py_venv_setup",
    "package_repo":"${package_repo}"
  },
  "apprun":{
    "run_method":"supervised",
    "autorestart":true
  },
  "username":"${epu_username}",
  "groupname":"${epu_groupname}",
  "appname":"phantom",
  "recipes":["r2app"],
}
