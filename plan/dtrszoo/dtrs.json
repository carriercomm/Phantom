{
  "epu": {
    "username": "${epu_username}",
    "groupname": "${epu_groupname}",
    "virtualenv": {
      "path": "/home/${epu_username}/app-venv",
      "python": "${python}",
      "virtualenv": "${virtualenv}"
    },
    "action": [
      "run"
    ],
    "run_config": {
      "program": "epu-dtrs",
      "run_directory": "/home/${epu_username}/dtrs",
      "run_method": "supervised",
      "autorestart": true,
      "config": {
        "server": {
          "amqp": {
            "host": "${rabbitmq_host}",
            "username": "${rabbitmq_username}",
            "password": "${rabbitmq_password}"
          }
        },
        "logging": {
          "handlers": {
            "syslog": {
              "address": [
                "${syslog_host}",
                514
              ]
            }
          },
          "root": {
            "handlers": [
              "console",
              "file",
              "syslog"
            ]
          }
        },
        "zookeeper": {
          "hosts": "${zookeeper}:2181",
          "dtrs_path": "${zkbasedir}/dtrs",
          "timeout": 5,
          "username": "${zkuser}",
          "password": "${zkpw}"
        }
      }
    }
  },
  "recipes": [
    "epu"
  ]
}
