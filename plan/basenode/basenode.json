{
  "rabbitmq": {
    "vhosts": [
      "/"
    ],
    "users": {
      "${rabbitmq_username}": {
        "password": "${rabbitmq_password}",
        "permissions": {
          "/": {
            "conf": ".*",
            "write": ".*",
            "read": ".*"
          }
        }
      }
    }
  },
  "dtdata": {
    "retrieve_method": "archive",
    "archive_url": "${dtdata_archive_url}",
    "chef_debug_level": "debug"
  },
  "logstash": {
    "username": "${epu_username}",
    "groupname": "${epu_groupname}",
    "metrics_username": "${metrics_username}",
    "metrics_password": "${metrics_password}"
  },
  "epu": {
    "username": "${epu_username}",
    "groupname": "${epu_groupname}",
    "virtualenv": {
      "path": "/home/${epu_username}/app-venv",
      "python": "${python}",
      "virtualenv": "${virtualenv}"
    },
    "action": [
      "retrieve",
      "install"
    ],
    "retrieve_config": {
      "retrieve_method": "${epu_retrieve_method}",
      "archive_url": "${epu_archive_url}",
      "git_repo": "${epu_git_repo}",
      "git_reference": "${epu_git_branch}"
    },
    "install_config": {
      "install_method": "py_venv_offline_setup",
      "package_repo": "${package_repo}"
    }
  },
  "opentsdb": {
      "port": 4242
  },
  "tcollector": {
      "tsd_port": 4242
  },
  "recipes": [
    "apt",
    "rabbitmq",
    "rsyslog",
    "logstash",
    "hbase_basic",
    "opentsdb",
    "tcollector",
    "epu"
  ]
}
