{
  "epu": {
    "username": "${epu_username}",
    "groupname": "${epu_groupname}",
    "virtualenv": {
      "path": "/home/${epu_username}/app-venv",
      "python": "${python}",
      "virtualenv": "${virtualenv}"
    },
    "action": [
      "run"
    ],
    "run_config": {
      "program": "epu-provisioner-service",
      "run_directory": "/home/${epu_username}/${name}",
      "run_method": "supervised",
      "autorestart": true,
      "config": {
        "server": {
          "amqp": {
            "host": "${rabbitmq_host}",
            "username": "${rabbitmq_username}",
            "password": "${rabbitmq_password}"
          }
        },
        "logging": {
          "handlers": {
            "syslog": {
              "address": [
                "${syslog_host}",
                514
              ]
            }
          },
          "root": {
            "handlers": [
              "console",
              "file",
              "syslog"
            ]
          }
        },
        "zookeeper": {
          "hosts": "${zookeeper}:2181",
          "provisioner_path": "/sec/testprovisioner",
          "timeout": 5,
          "username": "${zkuser}",
          "password": "${zkpw}"
        },
        "context": {
          "uri": "https://svc.uc.futuregrid.org:8446/ContextBroker/ctx/",
          "key": "${ctxbroker_key}",
          "secret": "${ctxbroker_secret}"
        },
        "ssl_no_host_check": "True",
        "contextualization_disabled": "True"
      }
    }
  },
  "recipes": [
    "epu"
  ]
}
